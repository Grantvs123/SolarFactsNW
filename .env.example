
# SolarFactsNW Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# Node-RED Credential Encryption Secret
# Generate a strong, unique secret: openssl rand -hex 32
NODE_RED_CREDENTIAL_SECRET=your_very_strong_credential_secret_here

# API Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
TELNYX_API_KEY=your_telnyx_api_key_here
RETELL_API_KEY=your_retell_api_key_here

# Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=solarfacts_db
MYSQL_USER=solarfacts_user
MYSQL_PASSWORD=your_secure_mysql_password_here

# Application Configuration
APP_ENV=development
APP_PORT=1880
APP_HOST=localhost
LOG_LEVEL=info

# Security Configuration
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here

# External Service URLs
WEBHOOK_BASE_URL=http://localhost:1880
CALLBACK_BASE_URL=http://localhost:1880/callback

# Feature Flags
ENABLE_HEALTH_CHECKS=true
ENABLE_AUTO_HEALING=true
ENABLE_MONITORING=true
